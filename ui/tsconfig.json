{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2024",
    "module": "es2015",
    "moduleResolution": "bundler",
    "lib": ["es5", "es6", "es2020", "dom"],
    "allowJs": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "js/src/**/*"
  ],
  "exclude": ["js/**/*.spec.ts"]
}