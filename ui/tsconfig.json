{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["es5", "es6", "es2020", "dom"],
    "allowJs": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "js/out"
  },
  "include": [
    "js/src/**/*"
  ],
  "exclude": ["js/**/*.spec.ts"]
}